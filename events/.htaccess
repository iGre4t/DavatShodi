RewriteEngine On

# Keep users anchored in the main panel: redirect any event-scoped login back to the root login.
RewriteRule ^([^/]+)/login\.php$ /login.php [R=302,L]

# Route event-specific draw/prize/invite requests to the central handlers with the event code preserved.
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^/]+)/(draw|prizes|invite)\.php$ ../$2.php?event_code=$1 [L,QSA]
